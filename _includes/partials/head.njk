<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title }} | {{ site.name }}</title>
{% if summary %}<meta name="description" content="{{ summary | safe }}">{% endif %}
<link rel="canonical" href="{{ site.url | default('') }}{{ page.url }}">
<meta property="og:type" content="article"><meta property="og:title" content="{{ title }}">
<meta property="og:description" content="{{ summary | safe }}"><meta property="og:url" content="{{ site.url }}{{ page.url }}">
{% if social_image %}<meta property="og:image" content="{{ site.url }}{{ social_image }}">{% endif %}
<meta name="twitter:card" content="summary_large_image">
{% if process.env.ELEVENTY_ENV != "production" %}<meta name="robots" content="noindex, nofollow">{% endif %}
<!-- Netlify Identity widget (needed for invite / recovery / Google login) -->
<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
<script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", (user) => {
      const hash = window.location.hash || "";
      // If arriving from an invite / recovery / confirmation link, open the login modal
      if (!user && (hash.includes("invite_token") || hash.includes("recovery_token") || hash.includes("confirmation_token"))) {
        window.netlifyIdentity.open("login");
      }
      // After login (incl. Google), send to the CMS
      window.netlifyIdentity.on("login", () => {
        window.location.href = "/admin/";
      });
    });
  }
</script>
