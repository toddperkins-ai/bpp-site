{# _includes/partials/footer.njk #}
<footer>
  <div class="social-icons">
    {% for s in _site.social | default([]) %}
      {% set p = (s.platform or '') | lower %}
      <a href="{{ s.url }}" target="_blank" rel="noopener"
         aria-label="Visit our {{ p | default('social') }} page">
        {% if p == "facebook" %}
          <img src="/assets/images/facebook.svg" alt="Facebook icon">
        {% elif p == "x" or p == "twitter" %}
          <img src="/assets/images/twitter-x-logo-black-round-20851.svg" alt="X (formerly Twitter) icon">
        {% elif p == "instagram" %}
          <img src="/assets/images/instagram.svg" alt="Instagram icon">
        {% elif p == "youtube" %}
          <img src="/assets/images/youtube.svg" alt="YouTube icon">
        {% endif %}
      </a>
    {% endfor %}
  </div>

  <div class="topbox">
    <ul class="sitemap">
      {% for link in nav.footer | default([]) %}
        <li><a href="{{ link.url }}">{{ link.label }}</a></li>
      {% endfor %}
    </ul>

    <div class="badges">
      <div class="ARC-logo">
        <img src="/assets/images/certified.png" alt="Certified professional badge">
      </div>
      <div class="ase">
        <img src="/assets/images/measurement tools.png" alt="Measurement tools icon">
      </div>
      <div class="mta">
        <img src="/assets/images/map.png" alt="Map icon">
      </div>
    </div>
  </div>

  <div class="footer-contact">
    <div class="pn">
      <a href="tel:{{ (_site.phone | default('0480 040 667')) | replace(' ', '') }}"
         aria-label="Contact us by phone">
        Phone: {{ _site.phone | default('0480 040 667') }}
      </a>
    </div>
    <div class="email">
      <a href="mailto:{{ _site.email | default('admin@bushfireprotectionandplanning.au') }}"
         aria-label="Send us an email">
        {{ _site.email | default('admin@bushfireprotectionandplanning.au') }}
      </a>
    </div>
    <div class="copy-right">
      <p>&copy; 2025 {{ _site.name | default('Bushfire Protection and Planning') }}</p>
    </div>
  </div>
</footer>
