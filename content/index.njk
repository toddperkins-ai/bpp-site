  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const popupTriggers = document.querySelectorAll(".cta-button, .popup-trigger");
      const modal = document.getElementById("popup-form");
      const backArrow = document.querySelector(".back-arrow");
      const form = document.getElementById("contact-form");
      const navMenu = document.getElementById("navMenu");

      // define toggleMenu()
      window.toggleMenu = function() {
        if (navMenu && navMenu.style.display === "block") {
          navMenu.style.display = "none";
        } else if (navMenu) {
          navMenu.style.display = "block";
        }
      };

      // define closeMenu()
      window.closeMenu = function () {
        if (navMenu) navMenu.style.display = "none";
      };

      if (!modal || !backArrow || !form) return;

      modal.style.display = "none";

      popupTriggers.forEach(trigger => {
        trigger.addEventListener("click", function (e) {
          e.preventDefault();
          modal.style.display = "flex";
        });
      });

      backArrow.addEventListener("click", function () {
        modal.style.display = "none";
      });

      window.addEventListener("click", function (e) {
        if (e.target === modal) modal.style.display = "none";
      });

      const modalContent = document.querySelector(".modal-content");
      if (modalContent) {
        modalContent.addEventListener("click", function (e) {
          e.stopPropagation();
        });
      }

      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const formData = new FormData(form);
        fetch("send-email.php", { method: "POST", body: formData })
          .then(r => r.text())
          .then(txt => {
            document.getElementById("form-response").innerHTML = txt;
            form.reset();
          })
          .catch(err => console.error("Error:", err));
      });
    });
  </script>
